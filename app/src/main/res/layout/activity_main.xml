<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kotlin.MainActivity">

    <Button
        android:id="@+id/button_exec_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_execute_main"
        app:layout_constraintBottom_toTopOf="@+id/button_exec_thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_exec_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_execute_thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_exec_main" />

</androidx.constraintlayout.widget.ConstraintLayout>